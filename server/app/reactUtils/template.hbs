'use strict';

var React = require('react-native');

var ListView = require('./components/ListView');
var MapView = require('./components/MapView');
var ScrollView = require('./components/ScrollView');
var SliderIOS = require('./components/SliderIOS');
var SwitchIOS = require('./components/SwitchIOS');


var {
  Image,
  AppRegistry,
  StyleSheet,
  Text,
  View,
} = React;

var reactNative = React.createClass({
    render: function() {
        return (
          <View>
            {{#each tree}}
            <View {{parentStyle this.className}}>
              {{#each this.children}}
              <{{this.type}} {{#each this.props}}{{#each this}}{{supplyProp @key}}{{{getProp @key this}}}{{/each }}{{/each }}style={[{{#each this.className}}{{#unless @first}}styles.{{camelCase this}}{{#unless @last}}, {{/unless }}{{/unless }}{{/each }}]}>{{valueHelper this}}
              </{{this.type}}>
              {{/each}}
            </View>
            {{/each }}
          </View>
        );
    }
})


var styles = StyleSheet.create({
    {{#each styleTree}}
      {{camelCase @key}}:{
        {{#each this}}
          {{camelCase @key}}: {{{removePx this @key}}},
        {{/each }}
      }, 
    {{/each }}
})

AppRegistry.registerComponent('reactNative', () => reactNative);

